{
  "name": "@sv-sdk/observability",
  "version": "0.0.1",
  "type": "module",
  "description": "Observability and monitoring for SV-SDK",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./metrics": "./src/metrics/collector.ts",
    "./health": "./src/health/probes.ts"
  },
  "scripts": {
    "dev": "tsc --watch --noEmit",
    "build": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@sv-sdk/cache": "workspace:*",
    "@sv-sdk/core": "workspace:*",
    "@sv-sdk/db-config": "workspace:*",
    "@sv-sdk/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}

