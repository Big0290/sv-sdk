{
  "name": "@big0290/audit",
  "version": "0.0.2",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Big0290/sv-sdk.git",
    "directory": "packages/audit"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "files": [
    "src"
  ],
  "description": "Audit logging package with PII handling and retention policies",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./log": "./src/log-audit.ts",
    "./query": "./src/query-audit.ts",
    "./pii": "./src/pii-handler.ts",
    "./retention": "./src/retention.ts",
    "./integrity": "./src/integrity.ts"
  },
  "scripts": {
    "dev": "tsc --watch --noEmit",
    "build": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@big0290/core": "workspace:*",
    "@big0290/db-config": "workspace:*",
    "@big0290/shared": "workspace:*",
    "@big0290/validators": "workspace:*",
    "nanoid": "^5.0.9"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
