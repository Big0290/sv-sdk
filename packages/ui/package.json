{
  "name": "@sv-sdk/ui",
  "version": "0.0.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Big0290/sv-sdk.git",
    "directory": "packages/ui"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "description": "UI component library for SV-SDK built with Svelte 5 and Tailwind CSS",
  "svelte": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src",
    "tailwind.config.ts"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "svelte": "./src/index.ts"
    },
    "./styles": "./src/styles/globals.css",
    "./tokens": "./src/tokens.ts",
    "./tailwind.config": "./tailwind.config.ts"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && svelte-package --input src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.3",
    "@livekit/components-core": "^0.12.0",
    "@zxing/browser": "^0.1.5",
    "@zxing/library": "^0.21.0",
    "clsx": "^2.1.0",
    "hls.js": "^1.5.7",
    "lucide-svelte": "^0.546.0",
    "svelte": "^5.15.1",
    "wavesurfer.js": "^7.8.2"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.3.7",
    "@sveltejs/vite-plugin-svelte": "^5.0.4",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.11.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "svelte-check": "^4.1.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "vite": "^6.0.7",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  }
}
