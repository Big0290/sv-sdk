{
  "name": "@sv-sdk/core",
  "version": "0.0.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Big0290/sv-sdk.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "files": [
    "src"
  ],
  "description": "Core SDK and plugin system for SV-SDK",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./sdk-context": "./src/sdk-context.ts",
    "./event-bus": "./src/event-bus.ts",
    "./plugin": "./src/plugin.ts",
    "./create-sdk": "./src/create-sdk.ts",
    "./health": "./src/health.ts"
  },
  "scripts": {
    "dev": "tsc --watch --noEmit",
    "build": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@sv-sdk/cache": "workspace:*",
    "@sv-sdk/db-config": "workspace:*",
    "@sv-sdk/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
