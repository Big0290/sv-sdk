{
  "name": "@sv-sdk/auth",
  "version": "0.0.1",
  "type": "module",
  "description": "Authentication package using BetterAuth with Drizzle adapter",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./config": "./src/auth-config.ts",
    "./user-service": "./src/user-service.ts",
    "./password-policy": "./src/password-policy.ts"
  },
  "scripts": {
    "dev": "tsc --watch --noEmit",
    "build": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@sv-sdk/cache": "workspace:*",
    "@sv-sdk/db-config": "workspace:*",
    "@sv-sdk/security": "workspace:*",
    "@sv-sdk/shared": "workspace:*",
    "@sv-sdk/validators": "workspace:*",
    "better-auth": "^1.3.3",
    "nanoid": "^5.0.9"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}

