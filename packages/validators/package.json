{
  "name": "@big0290/validators",
  "version": "0.0.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Big0290/sv-sdk.git",
    "directory": "packages/validators"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "files": [
    "src"
  ],
  "description": "Validation schemas and DTOs for SV-SDK",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./auth": "./src/auth-dtos.ts",
    "./email": "./src/email-dtos.ts",
    "./audit": "./src/audit-dtos.ts",
    "./permissions": "./src/permissions-dtos.ts",
    "./utils": "./src/validation-utils.ts"
  },
  "scripts": {
    "dev": "tsc --watch --noEmit",
    "build": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@big0290/db-config": "workspace:*",
    "@big0290/shared": "workspace:*",
    "zod": "^3.24.1"
