{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    /* Strict Type Checking */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@big0290/shared": ["./packages/shared/src/index.ts"],
      "@big0290/shared/*": ["./packages/shared/src/*"],
      "@big0290/db-config": ["./packages/db-config/src/index.ts"],
      "@big0290/db-config/*": ["./packages/db-config/src/*"],
      "@big0290/validators": ["./packages/validators/src/index.ts"],
      "@big0290/validators/*": ["./packages/validators/src/*"],
      "@big0290/cache": ["./packages/cache/src/index.ts"],
      "@big0290/cache/*": ["./packages/cache/src/*"],
      "@big0290/core": ["./packages/core/src/index.ts"],
      "@big0290/core/*": ["./packages/core/src/*"],
      "@big0290/security": ["./packages/security/src/index.ts"],
      "@big0290/security/*": ["./packages/security/src/*"],
      "@big0290/auth": ["./packages/auth/src/index.ts"],
      "@big0290/auth/*": ["./packages/auth/src/*"],
      "@big0290/audit": ["./packages/audit/src/index.ts"],
      "@big0290/audit/*": ["./packages/audit/src/*"],
      "@big0290/email": ["./packages/email/src/index.ts"],
      "@big0290/email/*": ["./packages/email/src/*"],
      "@big0290/permissions": ["./packages/permissions/src/index.ts"],
      "@big0290/permissions/*": ["./packages/permissions/src/*"],
      "@big0290/ui": ["./packages/ui/src/index.ts"],
      "@big0290/ui/*": ["./packages/ui/src/*"],
      "@big0290/cli": ["./packages/cli/src/index.ts"],
      "@big0290/cli/*": ["./packages/cli/src/*"],
      "@big0290/observability": ["./packages/observability/src/index.ts"],
      "@big0290/observability/*": ["./packages/observability/src/*"]
    }
  },
  "include": ["packages/*/src/**/*", "apps/*/src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist", "build", ".svelte-kit"]
}
